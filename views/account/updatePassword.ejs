<!-- Content Heading -->
<% if (title) { %>
<h1 class="Login"><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- Message -->

<div id="messages"><%- messages() %></div>
<form class="passwordForm" action="/account/update/password" method="POST">
  <h2>NOTE: This will override current password!</h2>
  <label for="current_account_password"
    >Current Password:<br />
    <input
      type="password"
      id="current_account_password"
      name="current_account_password"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
  /></label>
  <label for="new_account_password"
    >New Password:<br />
    <input
      type="password"
      id="new_account_password"
      name="new_account_password"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
  /></label>
  <label for="confirm_account_password"
    >Confirm Password:<br />
    <input
      type="password"
      id="confirm_account_password"
      name="confirm_account_password"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
  /></label>
  <span
    ><br />Passwords must be at least 12 characters and contain at least 1
    number, 1 capital letter and 1 special character</span
  >
  <input type="submit" value="Update Password">
</form>

<script src="/js/passwordValidation.js"></script>