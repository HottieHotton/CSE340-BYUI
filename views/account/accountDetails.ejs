<!-- Content Heading -->
<% if (title) { %>
<h1 class="accountDetails"><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- Message -->

<%- messages() %>

<form class="updateAccountForm" action="/account/update/details" method="POST">
  <label for="account_firstname"
    >First Name:<br />
    <input
      type="text"
      id="account_firstname"
      name="account_firstname"
      required
      value="<%= locals.account_firstname %>"
  /></label>
  <label for="account_lastname"
    >Last Name:<br />
    <input
      type="text"
      id="account_lastname"
      name="account_lastname"
      required
      value="<%= locals.account_lastname %>"
  /></label>
  <label for="account_email"
    >Email:<br />
    <input
      type="email"
      id="account_email"
      name="account_email"
      required
      value="<%= locals.account_email %>"
  /></label>
  <input disabled type="submit" name="submit" value="Update Account" />
  <input type="hidden" name="account_id" <% if(locals.account_id) { %>
  value="<%= locals.account_id %>" <% } %>>
</form>
<a id="accountPage" href="/account/update"><button>Go Back</button></a>

<script src="/js/account-update.js"></script>
